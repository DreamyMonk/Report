
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check user roles
    function isAuth() {
      return request.auth != null;
    }
    function isAdmin() {
      return isAuth() && request.auth.token.role == 'admin';
    }
    function isOfficer() {
      return isAuth() && (request.auth.token.role == 'officer' || isAdmin());
    }
    
    // Publicly accessible collections
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /statuses/{statusId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /content/{contentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Shared reports
    match /shared_reports/{shareId} {
      allow read, create: if isOfficer();
    }

    // Report submission & tracking
    match /reports/{reportId} {
      allow create; // Anyone can create a report
      allow list: if isOfficer();
      allow read, update: if isOfficer();
      
      match /messages/{messageId} {
        // Reporter can write, officers can read/write
        allow create: if isOfficer() || request.auth == null; // Reporter is anonymous
        allow list, read: if isOfficer();
      }
      match /attachments/{attachmentId} {
        allow create, read: if isOfficer() || request.auth == null;
      }
    }
    
    // User profiles can be read by officers, but only edited by admins or the user themselves.
    match /users/{userId} {
      allow read: if isOfficer();
      allow create, update, delete: if isAdmin();
    }
    
    // Audit logs are write-only for officers/system, read-only for admins.
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow list: if isAdmin();
      allow create: if isOfficer();
    }
  }
}
