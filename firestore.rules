
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to manage reports
    match /reports/{reportId} {
      allow read, write: if request.auth != null;

      // Allow anyone to create a report
      allow create;

      // Allow message subcollection access for authenticated users
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Allow authenticated users to read user data, but only the user can edit their own document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
